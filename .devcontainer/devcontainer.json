{
  "name": "c-dev-environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "editor.formatOnSave": true,
    "C_Cpp.formatting": "clangFormat",
    "[c]": {
      "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
      "editor.defaultFormatter": "ms-vscode.cpptools"
    }
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ]
}
